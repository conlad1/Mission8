@model IEnumerable<Mission8.Models.TaskItem>

@{
    ViewData["Title"] = "Quadrants";
    
    // Group tasks by quadrant
    var quadrant1 = Model.Where(t => t.Quadrant == 1).ToList();
    var quadrant2 = Model.Where(t => t.Quadrant == 2).ToList();
    var quadrant3 = Model.Where(t => t.Quadrant == 3).ToList();
    var quadrant4 = Model.Where(t => t.Quadrant == 4).ToList();
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Task Quadrants</h2>
    <a asp-controller="Home" asp-action="Add" class="btn btn-primary">+ Add Task</a>
</div>

@* 2x2 Bootstrap Grid for Quadrants *@
<div class="row g-3">
    
    @* Quadrant 1: Important / Urgent *@
    <div class="col-12 col-md-6">
        <div class="card border-danger h-100">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0">Quadrant 1</h5>
                <small>Important / Urgent</small>
            </div>
            <div class="card-body">
                @if (quadrant1.Any())
                {
                    @foreach (var task in quadrant1)
                    {
                        <div class="card mb-2 shadow-sm">
                            <div class="card-body p-3">
                                <h6 class="card-title mb-1">@task.TaskName</h6>
                                @if (task.DueDate.HasValue)
                                {
                                    <p class="card-text text-muted small mb-2">
                                        <i class="bi bi-calendar"></i> Due: @task.DueDate.Value.ToString("MM/dd/yyyy")
                                    </p>
                                }
                                <p class="card-text small mb-2">
                                    <span class="badge bg-secondary">@task.Category?.CategoryName</span>
                                </p>
                                <div class="d-flex gap-2">
                                    <a asp-controller="Home" asp-action="Edit" asp-route-id="@task.TaskId" 
                                       class="btn btn-sm btn-outline-primary">Edit</a>
                                    <form asp-controller="Home" asp-action="Delete" method="post" class="d-inline">
                                        <input type="hidden" name="id" value="@task.TaskId" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger" 
                                                onclick="return confirm('Are you sure you want to delete this task?');">Delete</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <p class="text-muted fst-italic">No tasks in this quadrant.</p>
                }
            </div>
        </div>
    </div>

