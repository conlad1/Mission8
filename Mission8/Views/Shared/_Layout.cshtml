<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Task Manager</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/Mission8.styles.css" asp-append-version="true"/>
</head>
<body>
<header>
    <nav class="navbar navbar-dark bg-dark border-bottom box-shadow mb-3">
        <div class="container">

            @* Subtle back link — only shown on the Add/Edit page.
               The view sets ViewData["ShowBack"] = true to trigger this. *@
            @if (ViewData["ShowBack"] is true)
            {
                <a asp-controller="Home" asp-action="Index" class="text-white-50 text-decoration-none small">
                    &larr; Quadrants
                </a>
            }
            else
            {
                @* Empty div keeps the title centered when there's no back link *@
                <div style="width: 80px;"></div>
            }

            @* Centered brand title — clicking it always goes to the Quadrants page *@
            <a class="navbar-brand mx-auto fw-bold" asp-controller="Home" asp-action="Index">
                Task Manager
            </a>

            @* Balancing spacer so the title stays truly centered *@
            <div style="width: 80px;"></div>

        </div>
    </nav>
</header>

<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2026 - Task Manager
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
